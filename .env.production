NODE_ENV=production
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/userdb?schema=public
DATABASE_URL_PROD=postgresql://postgres:postgres@postgres:5432/userdb?schema=public
TENANT_DATABASE_URL=postgresql://postgres:postgres@postgres:5432/tenant_db?schema=public

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_TTL=3600
REDIS_PREFIX=healthcare:
REDIS_PASSWORD=

# JWT Configuration
JWT_SECRET=CHANGE_THIS_TO_A_SECURE_SECRET_IN_PRODUCTION
JWT_EXPIRATION=24h

# Prisma Configuration
PRISMA_SCHEMA_PATH=/app/src/shared/database/prisma/schema.prisma
PRISMA_TENANT_SCHEMA_PATH=/app/src/shared/database/prisma/tenant.schema.prisma

# App Configuration
PORT=8088
API_PREFIX=/api/v1
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# Logging
LOG_LEVEL=info
ENABLE_AUDIT_LOGS=true

# Rate limiting configuration
RATE_LIMIT_ENABLED=true
API_RATE_LIMIT=1000
AUTH_RATE_LIMIT=50
HEAVY_RATE_LIMIT=100
USER_RATE_LIMIT=500
HEALTH_RATE_LIMIT=2000
MAX_AUTH_ATTEMPTS=50
AUTH_ATTEMPT_WINDOW=18000
MAX_CONCURRENT_SESSIONS=50
SESSION_INACTIVITY_THRESHOLD=9000

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=true
EMAIL_USER=noreply@ishswami.in
EMAIL_PASSWORD=YOUR_APP_SPECIFIC_PASSWORD
EMAIL_FROM=noreply@ishswami.in
FRONTEND_URL=https://ishswami.in

# Security Configuration
SECURITY_RATE_LIMIT=true
SECURITY_RATE_LIMIT_MAX=1000
SECURITY_RATE_LIMIT_WINDOW_MS=150
TRUST_PROXY=1

# CORS Configuration
CORS_ORIGIN=https://ishswami.in,https://api.ishswami.in
CORS_CREDENTIALS=true
CORS_METHODS=GET,HEAD,PUT,PATCH,POST,DELETE,OPTIONS

# Domain Configuration
VIRTUAL_HOST=api.ishswami.in
VIRTUAL_PORT=8088
LETSENCRYPT_HOST=api.ishswami.in
LETSENCRYPT_EMAIL=noreply@ishswami.in

# Docker Configuration
DOCKERHUB_USERNAME=aadeshbhujbal

# SSL Configuration
SSL_KEY_PATH=/app/ssl/api.ishswami.in.key
SSL_CERT_PATH=/app/ssl/api.ishswami.in.crt

# WhatsApp Configuration
WHATSAPP_ENABLED=false
WHATSAPP_API_URL=https://graph.facebook.com/v17.0
WHATSAPP_API_KEY=YOUR_WHATSAPP_API_KEY
WHATSAPP_PHONE_NUMBER_ID=YOUR_WHATSAPP_PHONE_NUMBER_ID
WHATSAPP_BUSINESS_ACCOUNT_ID=YOUR_WHATSAPP_BUSINESS_ACCOUNT_ID
WHATSAPP_OTP_TEMPLATE_ID=otp_verification
WHATSAPP_APPOINTMENT_TEMPLATE_ID=appointment_reminder
WHATSAPP_PRESCRIPTION_TEMPLATE_ID=prescription_notification 