NODE_ENV=production
IS_DEV=false

# Database configuration
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/userdb?schema=public

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_TTL=7200
REDIS_PREFIX=healthcare:
REDIS_PASSWORD=
REDIS_MAX_MEMORY=256mb
REDIS_POLICY=allkeys-lru

# Resource Optimization
DB_CONNECTION_LIMIT=30
DB_POOL_TIMEOUT=30
DB_STATEMENT_TIMEOUT=60000
NODE_OPTIONS="--max-old-space-size=1536 --max-http-header-size=16384"
GC_INTERVAL=21600 # 6 hours in seconds

# JWT Configuration
JWT_SECRET=CHANGE_THIS_TO_A_SECURE_SECRET_IN_PRODUCTION
JWT_EXPIRATION=24h

# Prisma Configuration
PRISMA_SCHEMA_PATH=/app/dist/shared/database/prisma/schema.prisma


# App Configuration
PORT=8088
API_PORT=8088
API_PREFIX=/api/v1
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# Logging
LOG_LEVEL=info
ENABLE_AUDIT_LOGS=true
LOG_RETENTION_DAYS=30
LOG_ROTATION_MAX_SIZE=50m
LOG_ROTATION_MAX_FILES=10
LOG_SILENT=false

# Rate limiting configuration
RATE_LIMIT_ENABLED=true
API_RATE_LIMIT=500
AUTH_RATE_LIMIT=30
HEAVY_RATE_LIMIT=50
USER_RATE_LIMIT=200
HEALTH_RATE_LIMIT=1000
MAX_AUTH_ATTEMPTS=10
AUTH_ATTEMPT_WINDOW=3600
MAX_CONCURRENT_SESSIONS=20
SESSION_INACTIVITY_THRESHOLD=1800

# Email Configuration
EMAIL_PROVIDER=api
# Email Configuration
EMAIL_HOST=live.smtp.mailtrap.io
EMAIL_PORT=2525
EMAIL_SECURE=false
EMAIL_USER=api
EMAIL_PASSWORD=d7aa998ad1a04bd591f94e4780a6dded
EMAIL_FROM=noreply@healthcare.com
MAILTRAP_API_TOKEN=d7aa998ad1a04bd591f94e4780a6dded
FRONTEND_URL=http://localhost:3000

# Security Configuration
SECURITY_RATE_LIMIT=true
SECURITY_RATE_LIMIT_MAX=500
SECURITY_RATE_LIMIT_WINDOW_MS=300
TRUST_PROXY=1
ENABLE_SSL=true
USE_HTTP=false

# CORS Configuration
CORS_ORIGIN=http://ishswami.in,http://api.ishswami.in,http://82.208.20.16:8088
CORS_CREDENTIALS=true
CORS_METHODS=GET,HEAD,PUT,PATCH,POST,DELETE,OPTIONS

# Domain Configuration
API_DOMAIN=api.ishswami.in
VIRTUAL_HOST=${API_DOMAIN}
VIRTUAL_PORT=8088

# API and Service URLs
BASE_URL=https://${API_DOMAIN}
API_URL=https://${API_DOMAIN}
SWAGGER_URL=/docs
BULL_BOARD_URL=/queue-dashboard
SOCKET_URL=/socket.io

# Host Configuration
HOST=${API_DOMAIN}
BIND_ADDRESS=0.0.0.0

# Directory Paths
NGINX_CONF_DIR=/etc/nginx/conf.d
DEPLOY_PATH=/var/www/healthcare

# Network Configuration
NETWORK_NAME=app-network
API_STATIC_IP=172.18.0.5

# Container Names
